{
  "name": "production-monitoring-vsm",
  "version": "2.0.0",
  "description": "Sistema de Value Stream Map en tiempo real para líneas de producción con análisis estadístico avanzado",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node scripts/migrate-database.js",
    "seed": "node scripts/seed-data.js",
    "setup": "npm run migrate && npm run seed",
    "validate-config": "node scripts/validate-configuration.js",
    "recalc-stats": "node scripts/recalculate-statistics.js",
    "benchmark": "node scripts/performance-benchmark.js",
    "backup": "node scripts/backup-database.js",
    "cleanup": "node scripts/cleanup-old-data.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix"
  },
  "dependencies": {
    "async": "^3.2.4",
    "axios": "^1.10.0",
    "basic-auth": "^2.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.0",
    "lodash": "^4.17.21",
    "mathjs": "^11.9.1",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "pg": "^8.11.0",
    "simple-statistics": "^7.8.3",
    "uuid": "^9.0.0",
    "validator": "^13.9.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/node": "^20.2.5",
    "eslint": "^8.42.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "sinon": "^15.1.0",
    "supertest": "^6.3.0"
  },
  "keywords": [
    "value-stream-map",
    "production-monitoring",
    "cycle-time",
    "oee",
    "real-time",
    "manufacturing",
    "statistics",
    "outlier-detection",
    "parallel-equipment",
    "nodejs",
    "postgresql"
  ],
  "author": "Production Engineering Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  }
}

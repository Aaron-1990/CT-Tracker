# =============================================================================
# .env.example - Plantilla de variables de entorno para VSM
# Copia este archivo a .env y configura los valores apropiados
# =============================================================================

# SERVIDOR
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# BASE DE DATOS
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vsm_production
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# SEGURIDAD
ALLOWED_IPS=127.0.0.1,your_ip_address
SESSION_SECRET=change-this-secret-key
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# VSM CONFIGURACION
OUTLIER_STD_MULTIPLIER=2.0
CSV_POLLING_INTERVAL=30
WEBSOCKET_ENABLED=true
LOG_LEVEL=info
